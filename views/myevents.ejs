<% include _header.ejs %>
<% include _navbar.ejs %>
<% var sessions; %>

<div class='container myevents-container'>
    
    <h3>My Events</h3>
       
    <div class="row">
        <div id="events">
            <% events.forEach(function(event) { %>
                <div class='myevents-event-row col-xs-12'>
                    
                    <div class='title col-lg-1 col-md-2 col-sm-2 col-xs-4'>
                        
                        <h4 style='display: inline;'>
                            <a href="/event/<%= event.id %>">
                                <%= event.get("title").trim() || "[untitled]" %>
                            </a>
                        </h4>

                    </div>

                    <% var date = event.get("dateAndTime"); %>

                    <% if (date) { %>

                        <div class='date col-lg-1 col-xs-4'>
                            <%= moment(date).format("D MMM YYYY") %>
                        </div>

                    <% } %>

                    <div class='col-lg-offset-6 col-lg-4'>
                        <a href="/admin/event/<%= event.id %>">
                            <button class="btn btn-primary btn-edit-title col-lg-2"><i class="fa fa-pencil-square-o"></i></button>
                        </a>

                        <button class="btn btn-primary btn-add-admin col-lg-2"><i class="fa fa-plus"></i></button> 

                    </div>

                </div>

            <% }); %>

        </div> 

        <h3><a href="/admin/event/new" class="btn btn-lg btn-primary" id="myevents-create-new-event">Create an Unhangout</a></h3>

        <br/>
        
        <% if (permalinkSessions) { %>
          <div>
            <h3>Permalink Sessions</h3>
            <% sessions = permalinkSessions; %>
            <% include _permalink_session_table.ejs %>
          </div>

          <h3><a href="/admin/event/new" class="btn btn-lg btn-primary" id="admin-create-new-event">Create a Permalink</a></h3>

        <% } %>

    </div>

</div>

<%- requireScripts("/public/js/myevents.js") %>
<% include _footer.ejs %>
