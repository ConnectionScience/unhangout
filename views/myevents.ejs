                        <a href="/event/{{- id }}">
                            {{- title }} 
                        </a>
                    </h4>

                </div>  

                <div class='date col-lg-1 col-xs-4'>
                    {{- dateAndTime }}
                </div>

                <div class='col-lg-offset-6 col-lg-4'>
                    <a href="/admin/event/{{- id }}">
                        <button class="btn btn-primary btn-edit-title col-lg-2"><i class="fa fa-pencil-square-o"></i></button>
                    </a>

                    <a href="">
                        <button class="btn btn-primary btn-add-admin col-lg-2"><i class="fa fa-plus"></i></button> 
                    </a>
                </div>  

            </div>      

        </td>

    </script>

    <h3><a href="/admin/event/new" class="btn btn-lg btn-primary" id="myevents-create-new-event">Create an Unhangout</a></h3>
       
