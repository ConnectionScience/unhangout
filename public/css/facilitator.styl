body {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
}
#share-link {
  cursor: auto;
}
#app {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  top: 0;
}
.main-window {
  width: 100%;
  height: 100%;
  display: table;
  .columns {
    display: table-row;
  }
  // Default mode: hide left column.
  .left-column {
    display: none;
    vertical-align: top;
    background-color: black;
    height: 100%;
  }
  .right-column {
    width: 100%;
    height: 100%;
    display: table-cell;
    vertical-align: top;
  }
  // Sidebar mode: left column is main, right column is sidebar.
  &.sidebar .left-column { display: table-cell; width: 100%; }
  &.sidebar .right-column { width: 300px; }

  // Facilitator: sub-table layout
  .facilitator {
    width: 100%;
    height: 100%;
    min-width: 300px;
    margin: 0;
    padding: 0;
    display: table;
  }

  //
  // Header
  //
  .header-row {
    display: table-row;
    background-color: #032;
  }
  .title { display: table-cell; }
  .title-contents {
    width: 100%;
    //height: 22px;
  }

  .shrink, .grow {
    vertical-align: top;
    padding: 0px 12px;
  }
  .shrink { display: inline-block; }
  .grow { display: none; }
  &.sidebar {
    .shrink { display: none; }
    .grow { display: inline-block; }
  }

  .name {
    box-sizing: border-box;
    font-weight: bold;
    color: #eee;
    font-size: 16px;
    line-height: 1.2em;
    height: 1.4em;
    display: inline-block;
    padding-left: 0.5em;
  }
  &.sidebar .name {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: center;
    padding: 0.2em;
  }
  .hide-app {
    float: right;
    color: #eee;
    cursor: pointer;
    padding: 0em 0.5em;
  }

  //
  // Main activity area
  //
  .activity-holder { display: table-row; }
  .activity { display: table-cell; height: 100%; }

  //
  // Footer
  //
  .footer-holder { display: table-row; }
  .footer {
    display: table-cell;
    width: 100%;
    height: 1em;
    background-color: #acb;
    color: white;
    font-style: italic;
    text-align: center;
  }
  &.sidebar .footer {
    font-size: 12px;
    line-height: 1.5em;
  }
  &.sidebar .video-controls {
    font-size: 10px;
    .btn {
      font-size: 12px;
      padding: 4px 4px;
    }
  }

}

// Activities

.about-activity {
  padding: 1em;
}

.faces-activity {
  width: 100%;
  height: 100%;
  background-color: black;
}

.video-activity {
  height: 100%;
  width: 100%;
  table {
    width: 100%;
    height: 100%;
  }
}

.webpage-activity {
  width: 100%;
  height: 100%;
  position: relative;

  .loading {
    position: absolute;
    top: 0;
    left: 0;
    background-color: yellow;
  }
}

