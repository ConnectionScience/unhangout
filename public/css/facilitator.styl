body {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
}
#share-link {
  cursor: auto;
}
#app {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  top: 0;
}
.main-window {
  width: 100%;
  height: 100%;
  display: table;
  .columns {
    display: table-row;
  }
  // Default mode: hide left column.
  .left-column {
    display: none;
    vertical-align: top;
    background-color: black;
    height: 100%;
  }
  .right-column {
    width: 100%;
    height: 100%;
    display: table-cell;
    vertical-align: top;
  }
  // Sidebar mode: left column is main, right column is sidebar.
  .shrink { display: inline-block; }
  .grow { display: none; }
  &.sidebar {
    .right-column {
      width: 300px;
    }
    .left-column {
      display: table-cell;
      width: 100%;
    }
    .shrink { display: none; }
    .grow { display: inline-block; }
    .title .name {
      white-space: nowrap;
      width: 200px;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    .video-controls {
      font-size: 10px;
      .for {
        display: none;
      }
      .btn {
        font-size: 12px;
        padding: 4px 4px;
      }
    }
    .footer {
      font-size: 12px;
      line-height: 1.5em;
    }
  }
}
.facilitator {
  width: 100%;
  height: 100%;
  min-width: 300px;
  margin: 0;
  padding: 0;
  display: table;

  .header-row {
    display: table-row;
    background-color: #032;
    .title-contents {
      width: 100%;
      height: 22px;
      overflow: hidden;
    }
    .title {
      display: table-cell;
      position: relative;
      vertical-align: middle;
      .shrink, .grow {
        vertical-align: top;
        padding: 0px 12px;
      }
      .name {
        font-weight: bold;
        color: #eee;
        font-size: 16px;
        line-height: 1.2em;
        height: 1.2em;
        display: inline-block;
        padding-left: 0.5em;
      }
      .hide-app {
        float: right;
        color: #eee;
        cursor: pointer;
        padding: 0em 0.5em;
      }
    }
  }
  .activity-list-holder {
    display: table-row;
    .activity-list {
      display: table-cell;
      border-bottom: 1px solid #eee;
      ul.links {
        display: inline;
        margin: 0;
        padding: 0;
        li {
          margin: 2px 2px 0 2px
          display: inline;
          padding: 0 0.5em;
          box-shadow: 0 -1px 1px #ddd;
          &.active {
            border-radius: 5px 5px 0px 0px;
            box-shadow: 0 -1px 1px #666;
            background-color: #efe;
          }
          a:active, a:focus, a:link, a:visited {
            outline: none;
            text-decoration: none;
            color: black;
          }
        }
      }
      .dropdown {
        display: inline;
        padding-left: 0.5em;
      }
    }
  }

  .activity-holder {
    display: table-row;
    .activity {
      display: table-cell;
      height: 100%;
    }
  }

  .footer-holder {
    display: table-row;
    .footer {
      display: table-cell;
      width: 100%;
      height: 1em;
      background-color: #acb;
      color: white;
      font-style: italic;
      text-align: center;
    }
  }
}

// Activities

.about-activity {
  padding: 1em;
}

.faces-activity {
  width: 100%;
  height: 100%;
  background-color: black;
}

.video-activity {
  height: 100%;
  width: 100%;
  table {
    width: 100%;
    height: 100%;
  }
}

.webpage-activity {
  width: 100%;
  height: 100%;
  position: relative;

  .loading {
    position: absolute;
    top: 0;
    left: 0;
    background-color: yellow;
  }
}

