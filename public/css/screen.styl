/*
 * Session display on event page
 */

.session {
  float: left;
  border-radius: 5px;
  margin-bottom: 5px;
  padding: 10px;
  width: 100%;

  .session-area {
    padding: 0;
    padding-right: 3px;
    margin-bottom: 5px;

