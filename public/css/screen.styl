        color: $primary;
        font-weight: normal;
        font-size: 1.2em;
        padding: 0px;
        margin: 0px;
        height: 38px;
      }

      .btn-join-session {
        padding: 0px;

        .attend.btn {
          color: white;
          width: 100%;
          border-radius: 2px;
          font-size: 1.2em;
          font-weight: 300;
          letter-spacing: 0.5px;
        }
      }

      .btn-admin-join-session {
        padding: 0px;

        .attend.btn {
          color: white;
          width: 100%;
          border-radius: 2px 0px 0px 2px;
          font-size: 1.2em;
          font-weight: 300;
          letter-spacing: 0.5px;
        }
      }

      .btn-admin-delete-session{
        padding: 0px;

        .delete {
          border-radius: 0px 2px 2px 0px;
          text-align: center;
          font-size: 1.2em;
        }
      }
  }

  .session-spots {
    padding: 0px;
  }

  .hangout-users, .hangout-offline {
      padding: 0px;

    .user, .empty {
      float: left;
      width: 46px;
      height: 46px;
      list-style: none;
    }

    @media(max-width: 1199px) {
      .user, .empty {
        width: 37px;
        height: 37px;
      }

      .user.focus.joining {

        img {
          width: 37px;
          height: 37px;
        }
      }
      
    }

    .empty {
      background-color: white;
      border: 1px solid #dfdfdf;
    }

    .user {

      img {
        width: 46px;
        height: 46px;
      }

      &.admin {
        border: 2px solid orange;
      }

      &.joining {
        opacity: 0.5;
        margin: 0;
      }

      i {
        font-size: 26px;
        line-height: 30px;
      }
    }
  }

  .hangout-offline {
    text-align: center;
    color: $background;
    font-style: italic;
  }

  .label {
    margin-left: 5px;
  }

  .description {
    padding: 5px;
  }

  .empty {
    height: 46px;
    text-align: center;
    color: #aaa;
    font-style: italic;
  }

  .started.label {
    margin-left: 5px;
  }

  &.live {
    &:nth-child(odd) {
      background-color: #eee;

    }

    &:nth-child(even) {
      background-color: #eee;
    }
  }

  &:nth-child(odd) {
    background-color: #eee;

  }

  &:nth-child(even) {
    background-color: #eee;
  }

  .attending {
    height: 50px;
    padding: 5px;
    padding-top: 15px;

    .first {
      width: 50px;
      height: 50px;
      background-color: $background;

      float: left;

      .user {
        margin: 0px;
        width: 50px;
        height: 50px;

        border: 0px;

        img, i {
          width: 50px;
          height: 50px;
          line-height: 50px;
        }

        i {
          margin-left: 5px;
        }

      }
    } 

    .counter {
      background-color: $background;

      width: 12px;
      height: 50px;

      margin-left: 5px;
      float: left;

      &.selected {
        background-color: $primary;
      }
    }

    .full {
      background-color: red;
      color: white;
      float: left;
      width: 42px;
      height: 35px;

      padding-left: 8px;
      padding-top: 15px;

      margin-left: 5px;
    }
  }


}

/*
 * Chat
 */

#chat-input-region {
    padding: 0px;
    background-color: #eee;
}

#chat {
  height: 100%;

  #welcome-message {
    border-bottom: 1px solid #aaa;
    margin-bottom: 10px;
  }

  .chat-archive-link {
    text-align: right;
    margin-bottom: 5px;
  }

  .over-capacity-warning {
    display: none;
    box-sizing: border-box;
    position: fixed;
    max-width: 370px;
    bottom: 3em;
    padding: 1em;
    height: 5em;
    opacity: 0.9;
    background-color: #fee;
    border: 1px solid red;
  }

  #chat-container-region {
    height: 100%;
    padding: 10px;
    border-radius: 2px;
    background-color: #eee;

    //overflow-y: auto;

    .panel {
      height: 100%;
      background-color: #eee;
    }

    .panel-body {
      height: 82%;
      overflow-y: scroll;
      padding: 0 15px;
    }

    .panel-footer {
      border-top: 0;
      padding: 10px 0px;  
      background-color: inherit;
    }

    #chat-list-container {
      height: auto;
      width: auto;

      .chat-message {
        word-wrap: break-word;
        list-style-type: none;

        padding-left: 25px;
        padding-right: 10px;

        &.past {
          opacity: 0.3;
        }

        &.system {
          text-align: center;
          font-style: italic;

          padding-left: 0px;
          padding-bottom: 10px;
          padding-top: 10px;

          margin-left: 20px;
          margin-right: 20px;
          margin-bottom: 20px;

          border-bottom: 1px solid #aaa;
          .from {
            display: none;
          }
        }

        span.from {
          float: left;
          display: block;
          font-weight: bold;
          width: 120px;
          text-align: right;
          margin-left: -130px;

          &.admin {
            color: orange;
          }
        }
      }
    }
  }
}

#global {
  position: absolute;
  z-index: 1000;
}

