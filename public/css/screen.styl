}

.event-navbar .navbar-nav {
  font-size: 14px;
  font-weight: 300;
}

.event-navbar .navbar-nav > li {
  color: $navbar-li;
}

.event-navbar .navbar-nav > li > a {
  color: white;
}

.event-navbar .navbar-nav > li > a:hover {
