/*
 * Session display on event page
 */

.session {
  position: relative;
  display: inline-block;
  float: left;

  height: 225px;
  width: 225px;   

  margin-left: -15px;

  border-radius: 5px;
  margin-top: 10px;
  margin-right: 30px;
  
  overflow: hidden;

  .hangout-users, .hangout-offline {
    position: absolute;
    top: 95px;
    right: 10px;
    padding-left: 14px;

    .user, .empty {
      float: left;
      margin-right: 5px;
      margin-top: 6px;
      width: 35px;
      height: 35px;

      list-style: none;
    }

    .empty {
      background-color: white;
      box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.25), 0 1px 0 rgba(255, 255, 255, 0.25);
    }

    .user {
      
      img {
        width: 30px;
      }

      &.admin {
        border: 2px solid orange;
      }

      &.joining {
        opacity: 0.5;
      }

      i {
        font-size: 26px;
        line-height: 30px;
      }
    }
  }

  .hangout-offline {
    text-align: center;
    color: $background;
    font-style: italic;
  }

  .label {
    margin-left: 5px;
  }

  h3 {
    color: $primary;
    width: 200px;
    margin: 0px;
    position: absolute;
    left: 10px;
    top: 10px;

    font-weight: normal;
    font-size: 1.4em;

    line-height: 15px;

    i {
      margin-right: 5px;
    }

  }

  .description {
    padding: 5px;
  }

  .attend.btn {
    position: absolute;
    color: white;
    border-radius: 2px;
    background: $navbar;
    
    top: 185px;
    left: 15px; 
    right: 15px;
    bottom: 5px;

    font-size: 1.2em;
    line-height: 1.4em;
    letter-spacing: 1px;
    
    height: 35px;

    .lock {
      margin-right: 5px;
    }
  }

  .empty {
    height: 40px;
    text-align: center;
    color: #aaa;
    font-style: italic;
    padding-top: 20px;
  }

  .started.label {
    margin-left: 5px;
  }

  &.live {
    &:nth-child(odd) {
      background-color: #eee;

    }

    &:nth-child(even) {
      background-color: #eee;
    }
  }

  &:nth-child(odd) {
    background-color: #eee;

  }

  &:nth-child(even) {
    background-color: #eee;
  }

  .attending {
    height: 50px;
    padding: 5px;
    padding-top: 15px;

    .first {
      width: 50px;
      height: 50px;
      background-color: $background;

      float: left;

      .user {
        margin: 0px;
        width: 50px;
        height: 50px;

        border: 0px;

        img, i {
          width: 50px;
          height: 50px;
          line-height: 50px;
        }

        i {
          margin-left: 5px;
        }

      }
    }

    .counter {
      background-color: $background;

      width: 12px;
      height: 50px;

      margin-left: 5px;
      float: left;

      &.selected {
        background-color: $primary;
      }
    }

    .full {
      background-color: red;
      color: white;
      float: left;
      width: 42px;
      height: 35px;

      padding-left: 8px;
      padding-top: 15px;

      margin-left: 5px;
    }
  }

  .admin-buttons {
    position: absolute;

    right: 15px;
    top: 185px;

    height: 35px;

    .btn {
      border-radius: 0px;
      position: absolute;
      top: 0px;
      bottom: 0px;
      padding-left: 0px;
      padding-right: 0px;

      width: 20px;

      &.delete {
        right: 0px;
      }
    }
  }

  .outer {
    position: relative;
    z-index: 10000;

    .attend-count {
      margin-left: 5px;
    }
  }

  .attendance {
    position: absolute;
    top: -1px;
    left: 0px;
    height: 32px;
    width: 50%;
    background-color: rgba(66, 94, 97, 0.5);
  }
}

/*
 * Chat
 */

#chat-input-region {
    position: absolute;
    bottom: 0px;
