#chat {
  overflow-y: hidden;
  overflow-x: visible;

  #welcome-message {
    padding: 10px;
    border-bottom: 1px solid #aaa;
    margin-bottom: 20px;
  }

  .chat-archive-link {
    text-align: right;
    font-style: italic;
  }

  .over-capacity-warning {
    display: none;
    box-sizing: border-box;
    position: fixed;
    max-width: 370px;
    bottom: 3em;
    padding: 1em;
    height: 5em;
    opacity: 0.9;
    background-color: #fee;
    border: 1px solid red;
  }

  #chat-container-region {
    width: 398px;
    bottom: 40px;
    margin-left: 0px;

    position: absolute;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 150px;
    overflow-y: auto;

    #chat-list-container {
      height: auto;
      width: auto;

      margin: 0px 0px 45px 0px;

      .chat-message {
        word-wrap: break-word;

        &.past {
          opacity: 0.3;
        }

        padding-left: 100px;

        &.system {
          text-align: center;
          font-style: italic;

          padding-left: 0px;
          padding-bottom: 10px;
          padding-top: 10px;

          margin-left: 20px;
          margin-right: 20px;
          margin-bottom: 20px;

          border-bottom: 1px solid #aaa;
          .from {
            display: none;
          }
        }

        span.from {
          margin-left: -120px;
          float: left;
          display: block;
          font-weight: bold;

          width: 115px;
          text-align: right;

          &.admin {
            color: orange;
          }
        }
      }
    }
  }
}

#global {
  position: absolute;
  z-index: 1000;
}

/*
 *  Video
 */

#video-embed {

  .video-player {
    background-color: #eee;
    height: 45% vh;

    div {
      width: 100%;
      height: 100%;
    }
  }

  .video-placeholder, & > .video-controls {
    box-sizing: border-box;
    padding: 1.5em;
  }

  .video-placeholder {
    margin-top: 50px;
    background-color: #eee;
    border: 3px dashed #ddd;
    border-bottom: none;
    border-radius: 10px 10px 0px 0px;
    color: #ccc;
    font-size: 24px;
    text-align: center;
  }

  & > .video-controls {
    margin-top: 0px;
    padding-top: 0.2em;
    background-color: #fca;
    border: 3px dashed #f90;
    border-top: none;
    border-radius: 0px 0px 5px 5px;
  }

  ul.previous-videos li {
    width: 380px;
  }

  .restore-previous-video {
    &.header {
      text-align: center;
      &:hover {
        background-color: white;
        color: black;
      }
    }
    .title {
      display: inline-block;
      vertical-align: middle;
      width: 230px;
      whites-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
  }
  .clear-previous-videos {
    text-align: center;
    cursor: pointer;
  }
}

.sync-indicator {
  display: inline-block;
  vertical-align: middle;
  margin-top: 0px;
  width: 6px;
  height: 6px;
  border-radius: 6px;
  background-color: #aaa;
  box-shadow: 0px 0px 5px rgba(200, 200, 200, 1);
  &.synced {
    background-color: #0f0;
    box-shadow: 0px 0px 5px rgba(0, 200, 0, 1);
  }
  &.unsynced {
    background-color: #f00;
    box-shadow: 0px 0px 5px rgba(200, 0, 0, 1);
  }
}
