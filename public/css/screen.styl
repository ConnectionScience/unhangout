#chat {
  overflow-y: hidden;
  overflow-x: visible;
  border-left: 1px #aaa;
  box-shadow: -1px 0px 1px #aaa;
  width: 85%;

  #welcome-message {
    padding: 10px;
    border-bottom: 1px solid #aaa;
    margin-bottom: 20px;
  }

  .chat-archive-link {
    text-align: right;
    font-style: italic;
  }

  .over-capacity-warning {
    display: none;
    box-sizing: border-box;
    position: fixed;
    max-width: 370px;
    bottom: 3em;
    padding: 1em;
    height: 5em;
    opacity: 0.9;
    background-color: #fee;
    border: 1px solid red;
  }

  #chat-container-region {
    height: 93vh;
    width: 100%;
    background-color: #eee;

    overflow-y: auto;

    #chat-list-container {
      height: auto;
      width: auto;

      margin: 0px 0px 45px 0px;

      .chat-message {
        word-wrap: break-word;
        list-style-type: none;

        padding-left: 25px;
        padding-right: 10px;

        &.past {
          opacity: 0.3;
        }

        &.system {
          text-align: center;
          font-style: italic;

          padding-left: 0px;
          padding-bottom: 10px;
          padding-top: 10px;

          margin-left: 20px;
          margin-right: 20px;
          margin-bottom: 20px;

          border-bottom: 1px solid #aaa;
          .from {
            display: none;
          }
        }

        span.from {
          float: left;
          display: block;
          font-weight: bold;
          width: 120px;
          text-align: right;
          margin-left: -130px;

          &.admin {
            color: orange;
          }
        }
      }
    }
  }
}

#global {
  position: absolute;
  z-index: 1000;
}

