  background-color: $navbar;
}

#user-menu-label {
  font-size: 18px;
  letter-spacing: 1px;
  font-weight: 300;  
}

/* Event Navbar Styles */ 
.event-navbar {
  background-color: #2E7DAA;
}

.event-navbar .navbar-brand {
  color: white;
  font-size: 16px;
  letter-spacing: 0.5px;
}

.container .event-navbar-header {
  margin-left: -25px; 
}

.event-navbar .container {
